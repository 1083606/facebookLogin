<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8ec6c5"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".HabitSetCharacterActivity">


    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_round_button"
        android:elevation="6dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingTop="30dp"
        android:paddingRight="15dp"
        android:paddingBottom="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:src="@drawable/com_facebook_profile_picture_blank_square"
            app:civ_border_color="#27535151"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/text_update_proimg"
            style="@style/Casual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="更換角色大頭照"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold" />


        <Spinner
            android:id="@+id/spinnerRoleCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:outlineAmbientShadowColor="#FFFFFF"
            android:padding="16dp" />

        <EditText
            android:id="@+id/editRole_name"
            style="@style/RegularMono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="16dp"
            android:hint="角色暱稱"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:padding="16dp"
            android:textColorHint="#767676"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/editNick_name"
            style="@style/RegularMono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/ic_child_care_black_24dp"
            android:drawablePadding="16dp"
            android:hint="暱稱你為..."
            android:inputType="textPersonName"
            android:maxLines="1"
            android:padding="16dp"
            android:textColorHint="#767676"
            android:textSize="16sp" />


        <Button
            android:id="@+id/bttnnext"
            style="@style/BoldCondensed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_rounde"
            android:clickable="true"
            android:padding="16dp"
            android:text="確認"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>