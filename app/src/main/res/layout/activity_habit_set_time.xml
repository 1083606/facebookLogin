<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/pick_time_button"
        android:layout_width="56dp"
        android:layout_height="53dp"
        android:layout_gravity="start"
        android:background="@drawable/icons8_add_90"
        app:layout_constraintBottom_toBottomOf="@+id/time_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.221"
        app:layout_constraintStart_toEndOf="@+id/time_text_view"
        app:layout_constraintTop_toTopOf="@+id/time_text_view" />

    <TextView
        android:id="@+id/time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每日習慣簽到時間"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.267"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.097" />

    <ImageButton
        android:id="@+id/pick_time_button1"
        android:layout_width="56dp"
        android:layout_height="53dp"
        android:layout_gravity="start"
        android:background="@drawable/icons8_add_90"
        app:layout_constraintBottom_toBottomOf="@+id/time_text_view1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.221"
        app:layout_constraintStart_toEndOf="@+id/time_text_view1"
        app:layout_constraintTop_toTopOf="@+id/time_text_view1" />

    <TextView
        android:id="@+id/time_text_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每日習慣簽到時間"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.267"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.23000002" />

    <ImageButton
        android:id="@+id/pick_time_button2"
        android:layout_width="56dp"
        android:layout_height="53dp"
        android:layout_gravity="start"
        android:background="@drawable/icons8_add_90"
        app:layout_constraintBottom_toBottomOf="@+id/time_text_view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.221"
        app:layout_constraintStart_toEndOf="@+id/time_text_view2"
        app:layout_constraintTop_toTopOf="@+id/time_text_view2" />

    <TextView
        android:id="@+id/time_text_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每日習慣簽到時間"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.267"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39" />

</androidx.constraintlayout.widget.ConstraintLayout>